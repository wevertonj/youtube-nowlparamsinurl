{
    "name": "Youtube - No Watch Later parameters in link URLs",
    "version": "1.0.0",
    "description": "This is simple extension that removes the watch later parameters from the URL links",
    "background": {
      "scripts": ["scripts/background.js"],
      "persistent": false
    },
    "content_scripts": [{
      "matches": ["*://*.youtube.com/*"],
      "js": ["scripts/content.js"]
    }],
    "permissions": ["storage"],  
    "browser_action": {    
        "default_icon": "favicon.png",    
        "default_popup": "./views/popup.html"  
    },    
    "manifest_version": 2
}